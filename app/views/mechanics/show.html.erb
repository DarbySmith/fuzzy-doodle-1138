<h1><%= @mechanic.name %></h1>
<h3>Years of Experience: <%= @mechanic.years_experience %></h3>
<br>
<h3>Current Rides they're working on:</h3>
  <section id="mechanic_rides">
    <% @mechanic.rides.each do |ride| %>
      <p><%= ride.name %></p>
    <% end %>
  </section>

<h3>Add a ride to workload:</h3>
  <%= form_with url: "/mechanics/#{@mechanic.id}", method: :patch, local: true do |f|%>
    <%= f.label :ride_id, "Ride Id:" %>
    <%= f.text_field :ride_id %>
    <%= f.submit "Submit" %>
  <% end %>